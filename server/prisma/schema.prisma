generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model School {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  code      String?   @unique
  approved  Boolean   @default(false)
  region    String?
  createdAt DateTime  @default(now())
  teachers  Teacher[]
  classes   Class[]
}

model TrainingSession {
  id                     Int       @id @default(autoincrement())
  title                  String
  description            String?
  date                   DateTime
  zoomLink               String
  createdAt              DateTime  @default(now())
  teacherId              Int
  teacher                Teacher   @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  completed              Boolean   @default(false)
  certificateUrl         String?
  adminRating            Int?
  feedback               String?
  certificateGeneratedAt DateTime?
}

model Teacher {
  id                   Int               @id @default(autoincrement())
  name                 String
  email                String            @unique
  password             String
  phone                String?
  blocked              Boolean           @default(false)
  schoolApproved       Boolean           @default(false)
  schoolId             Int
  school               School            @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  classes              Class[]
  trainings            TrainingSession[]
  resetPasswordToken   String?
  resetPasswordExpires DateTime?

  // ðŸ”¥ novo campo para relaÃ§Ã£o inversa
  reportFolders ReportFolder[]
}

model Class {
  id        Int      @id @default(autoincrement())
  name      String
  students  Int
  cycle     String
  year      String
  teacherId Int
  teacher   Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  schoolId  Int
  school    School   @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  code      String?  @unique
  kit       Kit?
  status    String   @default("Registered")
  createdAt DateTime @default(now())

  // ðŸ”¥ novo campo para relaÃ§Ã£o inversa
  reportFolders ReportFolder[]
}

model Kit {
  id      Int    @id @default(autoincrement())
  type    String
  status  String @default("em stock")
  classId Int?   @unique
  class   Class? @relation(fields: [classId], references: [id], onDelete: SetNull)
}

model ReportFolder {
  id        Int      @id @default(autoincrement())
  title     String
  driveLink String
  teacherId Int
  teacher   Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  classId   Int?
  class     Class?   @relation(fields: [classId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)
}

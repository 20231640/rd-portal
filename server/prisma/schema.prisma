generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model School {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  code      String?   @unique
  approved  Boolean   @default(false)
  region    String?
  createdAt DateTime  @default(now())
  teachers  Teacher[]
  classes   Class[]
}

model TrainingSession {
  id                     Int       @id @default(autoincrement())
  title                  String
  description            String?
  date                   DateTime
  zoomLink               String
  createdAt              DateTime  @default(now())
  teacherId              Int
  teacher                Teacher   @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  completed              Boolean   @default(false)
  certificateUrl         String?
  adminRating            Int?
  feedback               String?
  certificateGeneratedAt DateTime?
}

model Teacher {
  id                   Int               @id @default(autoincrement())
  name                 String
  email                String            @unique
  password             String
  phone                String?
  blocked              Boolean           @default(false)
  schoolApproved       Boolean           @default(false)
  schoolId             Int
  school               School            @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  classes              Class[]
  trainings            TrainingSession[]
  resetPasswordToken   String?
  resetPasswordExpires DateTime?
  reportFolders        ReportFolder[]
  kitRequests          KitRequest[]
}

model Class {
  id           Int          @id @default(autoincrement())
  name         String
  students     Int
  cycle        String
  year         String
  teacherId    Int
  teacher      Teacher      @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  schoolId     Int
  school       School       @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  code         String?      @unique
  status       String       @default("Registered")
  createdAt    DateTime     @default(now())
  reportFolders ReportFolder[]
  kitRequests  KitRequest[]
}

model KitRequest {
  id          Int      @id @default(autoincrement())
  teacherId   Int
  teacher     Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  classId     Int
  class       Class    @relation(fields: [classId], references: [id], onDelete: Cascade)
  kitType     String   // "básico", "avançado", "completo"
  status      String   @default("pending") // pending, approved, shipped, delivered
  requestedAt DateTime @default(now())
  approvedAt  DateTime?
  shippedAt   DateTime?
  deliveredAt DateTime?
  adminNotes  String?
  reports     KitReport[] // ← RELAÇÃO NOVA
}

model KitReport {
  id          Int      @id @default(autoincrement())
  requestId   Int
  request     KitRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  message     String
  teacherId   Int
  teacherName String
  createdAt   DateTime @default(now())
  resolved    Boolean  @default(false)
  resolvedAt  DateTime?
}

model ReportFolder {
  id        Int      @id @default(autoincrement())
  title     String
  driveLink String
  teacherId Int
  teacher   Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  classId   Int?
  class     Class?   @relation(fields: [classId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)
}
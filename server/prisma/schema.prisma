generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"    // ‚Üê MUDAR AQUI!
  url      = env("DATABASE_URL")
}

model School {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  code      String?   @unique
  approved  Boolean   @default(false)
  region    String?
  createdAt DateTime  @default(now())
  classes   Class[]
  teachers  Teacher[]
}

model TrainingSession {
  id                     Int       @id @default(autoincrement())
  title                  String
  description            String?
  date                   DateTime
  zoomLink               String
  createdAt              DateTime  @default(now())
  teacherId              Int
  completed              Boolean   @default(false)
  certificateUrl         String?
  adminRating            Int?
  certificateGeneratedAt DateTime?
  feedback               String?
  teacher                Teacher   @relation(fields: [teacherId], references: [id], onDelete: Cascade)
}

model Teacher {
  id                   Int               @id @default(autoincrement())
  name                 String
  email                String            @unique
  password             String
  phone                String?
  blocked              Boolean           @default(false)
  schoolApproved       Boolean           @default(false)
  schoolId             Int
  resetPasswordExpires DateTime?
  resetPasswordToken   String?
  classes              Class[]
  kitRequests          KitRequest[]
  reportFolders        ReportFolder[]
  school               School            @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  trainings            TrainingSession[]
}

model Class {
  id            Int            @id @default(autoincrement())
  name          String
  students      Int
  cycle         String
  year          String
  teacherId     Int
  schoolId      Int
  code          String?        @unique
  state         String         @default("ACTIVE")
  createdAt     DateTime       @default(now())
  school        School         @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  teacher       Teacher        @relation(fields: [teacherId], references: [id], onDelete: Cascade)
  kitRequests   KitRequest[]
  reportFolders ReportFolder[]
}

model KitRequest {
  id          Int         @id @default(autoincrement())
  teacherId   Int
  classId     Int
  kitType     String
  status      String      @default("pending")
  requestedAt DateTime    @default(now())
  approvedAt  DateTime?
  shippedAt   DateTime?
  deliveredAt DateTime?
  adminNotes  String?
  reports     KitReport[]
  class       Class       @relation(fields: [classId], references: [id], onDelete: Cascade)
  teacher     Teacher     @relation(fields: [teacherId], references: [id], onDelete: Cascade)
}

model KitReport {
  id          Int        @id @default(autoincrement())
  requestId   Int
  message     String
  teacherId   Int
  teacherName String
  createdAt   DateTime   @default(now())
  resolved    Boolean    @default(false)
  resolvedAt  DateTime?
  request     KitRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
}

model ReportFolder {
  id        Int      @id @default(autoincrement())
  title     String
  driveLink String
  teacherId Int
  classId   Int?
  createdAt DateTime @default(now())
  isActive  Boolean  @default(true)
  class     Class?   @relation(fields: [classId], references: [id])
  teacher   Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)
}
